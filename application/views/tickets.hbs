<!-- Add ticket form -->
<!-- The value tags correspond to the id in the database tables -->
<h1>Post a ticket by filling out this form</h1>
<form class="form-inline" method="post" enctype="multipart/form-data">
  <select name="issue_id" class="form-control">
    <option value="">Issue</option>
    <option value="1">Combustion Gas</option>
    <option value="2">Cosmic Rays</option>
    <option value="3">Ebola</option>
    <option value="4">Extreme Winds</option>
    <option value="5">Fallen Trees</option>
    <option value="6">Fire</option>
    <option value="7">Flood</option>
    <option value="8">Heavy Snowfall</option>
    <option value="9">High UV Index</option>
    <option value="10">Nuclear Waste</option>
    <option value="11">Oil Spill</option>
    <option value="12">Pollen</option>
    <option value="13">Pollution</option>
    <option value="14">Rabies</option>
    <option value="15">Thunderstorms</option>
    <option value="16">Tobacco</option>
    <option value="17">Toxic Waste</option>
  </select>

  <select name="location_id" class="form-control">
    <option value="">Location</option>
    <option value="1">Alcatraz Island</option>
    <option value="2">Angel Island</option>
    <option value="3">Aquatic Park</option>
    <option value="4">AT&T Park</option>
    <option value="5">Balboa Park</option>
    <option value="6">China Beach</option>
    <option value="7">Fort Funston</option>
    <option value="8">Fort Mason</option>
    <option value="9">Fort Miley</option>
    <option value="10">Glen Canyon Park</option>
    <option value="11">Golden Gate Park</option>
    <option value="12">Japanese Tea Garden</option>
    <option value="13">Lake Merced</option>
    <option value="14">Lands End</option>
    <option value="15">Mount Sutro Forest</option>
    <option value="16">Muir Woods</option>
    <option value="17">Ocean Beach</option>
    <option value="18">South Park</option>
    <option value="19">The Presidio</option>
    <option value="20">Twin Peaks</option>
    <option value="21">Union Square</option>
  </select>

  <input id="description" class="form-control" type="text" name="description" placeholder="Description">

  <select name="rating" class="form-control">
    <option value="">Rating</option>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>

  <input id="image" class="form-control" type="file" name="uploadImage" accept="image/*" />

  <button id="addticket" class="form-control btn btn-success" name="addticket" type="submit">Add Ticket</button>
</form>

<!-- Display tickets table -->
<h1>Viewing all tickets</h1>

<div class="table-responsive-md">
  <table class="table table-sm table-hover">
    <!-- Table categories -->
    <thead>
      <th scope="col">Image</th>
      <th scope="col">Details</th>
      <th scope="col">Submitted by</th>
      <th scope="col">Status</th>
    </thead>

    <!-- Table body -->
    <tbody>
    {{#each tickets}}
      <tr>
        <!-- Image -->
        <td style="width: 16.5%;">
          <img src="
          {{#if this.imagePath}}
            http://ec2-54-215-173-150.us-west-1.compute.amazonaws.com/{{this.imagePath}}
          {{else}}
            uploads/noimage.png
          {{/if}}" alt="Error loading image" class="img-fluid">
        </td>

        <!-- Details -->
        <td style="width: 50%;">
          <div class="table-responsive-md">
            <table class="table table-sm table-hover table-borderless">
              <tbody>
                <tr>
                  <th scope="row" style="width: 20%;">Issue</th>
                  <th>{{this.issueName}}</th>
                </tr>
                <tr>
                  <th scope="row">Location</th>
                  <td>{{this.locationName}}</td>
                </tr>
                <tr>
                  <th scope="row">Rating</th>
                  <td>{{this.rating}}</td>
                </tr>
                <tr>
                  <th scope="row">Description</th>
                  <td>{{this.description}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </td>

        <!-- Submitted by -->
        <td style="width: 20%;">
          <!-- Print username of user who submitted ticket, or anonymous -->
          <h5>
            {{#if this.userName}}
              {{this.userName}}
            {{else}}
              anonymous
            {{/if}}
          </h5>
          <h5>{{this.time}}</h5>
        </td>

        <!-- Status -->
        <td style="width: 13.5%;">
          <h5>{{this.status}}</h5>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>



{{msg}}
