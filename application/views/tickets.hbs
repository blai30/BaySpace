<h1>Viewing all tickets</h1>

<table>
    <thead>
        <th>Issue</th>
        <th>Location</th>
        <th>Status</th>
        <th>Date Opened</th>
    </thead>

    <tbody>
        {{#each tickets}}
            <tr>
                <td>{{this.issue}}</td>
                <td>{{this.location}}</td>
                <td>{{this.status}}</td>
                <td>{{this.opened}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<form action="/tickets" method="POST">
    <input id="issue" type="text" name="issue" placeholder="Issue">
    <input id="location" type="text" name="location" placeholder="Location">
    <button id="addticket" name="addticket">Add Ticket</button>
</form>
